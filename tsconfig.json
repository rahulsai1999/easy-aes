{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "target": "es5",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types/"]
  },
  "include": ["./src/*.ts"]
}
